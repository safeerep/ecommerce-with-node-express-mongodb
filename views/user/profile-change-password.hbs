<body>
  <div class="container mt-5 p-5">
    <div class="row m-3" style="min-height: 100vh;">
      <div class="card col-md-3 border-0">
        <div class="d-flex justify-content-center m-2">
          <img
            src="/images/epcartprofile.jpg"
            class="card-img-top rounded-circle"
            alt="Profile Picture"
            style="width: 150px; height: 150px;"
          />
        </div>
        <div class="card-body text-center">
          {{#if userData}}
          <h5 class="card-title">{{userData.Name}}</h5>
          {{else}}
          <h5 class="card-title">User Name</h5>
          {{/if}}
          {{#if userData}}
          <p class="card-text">{{userData.Email}}</p>
          {{/if}}
        <hr />
        </div>
      </div>

      <main class="col-md-8 border-start">
        <hr>
        <div class="card-header bg-white border-0">
        <h2 class="text-center">New Password</h2>
      </div>
      <div class="card-body">
        <div class="text-center fw-bold text-danger">
          {{#if message.error}}
            {{message.error}}
          {{/if}}
        </div>
        <form action="/profile/password-change" method="post">
          <div class="form-group col-md-11 m-5">
            <label for="password">New Password</label>
            <input
              type="password"
              name="Password"
              class="form-control"
              style="border: none; border-bottom: 1px solid #352F44; border-radius: 0;"
              id="email"
              placeholder="Enter your new password"
              required
            />
          </div>
          <div class="form-group col-md-11 mx-5">
            <label for="confirmpassword">Confirm password</label>
            <input
              type="password"
              name="ConfirmPassword"
              class="form-control"
              style="border: none; border-bottom: 1px solid #352F44; border-radius: 0;"
              id="password"
              placeholder="Confirm your new password"
              required
            />
          </div>
          <br />
          <div class="d-flex justify-content-center">
            <button
              type="submit"
              class="btn btn-block btn-lg bg-dark text-white"
              style="width: 50%;"
            >Submit</button>
          </div>
        </form>
      </div>
      </main>
    </div>
  </div>
</body>

