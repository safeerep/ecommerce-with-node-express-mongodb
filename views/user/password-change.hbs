<div class="row m-5">
  <div class="container" style="width: 60%;">
    <div class="card border-0 shadow mt-5">
      <br />
      <div class="card-header bg-white border-0">
        <h2 class="text-center">New Password</h2>
      </div>
      <div class="card-body">
        <div class="text-center fw-bold text-danger">
          {{#if message.error}}
            {{message.error}}
          {{/if}}
        </div>
        <form action="/verify-password" method="post">
          <div class="form-group col-md-11 m-5">
            <label for="password">New Password</label>
            <input
              type="password"
              name="Password"
              class="form-control"
              style="border: none; border-bottom: 1px solid #352F44; border-radius: 0;"
              id="email"
              placeholder="Enter your new password"
              required
            />
          </div>
          <div class="form-group col-md-11 mx-5">
            <label for="confirmpassword">Confirm password</label>
            <input
              type="password"
              name="ConfirmPassword"
              class="form-control"
              style="border: none; border-bottom: 1px solid #352F44; border-radius: 0;"
              id="password"
              placeholder="Confirm your new password"
              required
            />
          </div>
          <br />
          <div class="d-flex justify-content-center">
            <button
              type="submit"
              class="btn btn-block btn-lg bg-dark text-white"
              style="width: 50%;"
            >Submit</button>
          </div>
        </form>
      </div>
      <br />
    </div>
  </div>
</div>

