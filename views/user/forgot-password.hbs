<div class=" mt-4 d-flex justify-content-center">
  <div class="col-md-6 col-11" >
    <div class="card border-0 shadow mt-5">
      <br>
      <div class="card-header bg-white border-0">
        <h2 class="text-center">Verify Your Email</h2>
      </div>
      <div class="card-body">
        <div class="text-center fw-bold text-success">
          {{#if message.success}}
          {{message.success}}
          {{/if}}
        </div>
        <div class="text-center fw-bold text-danger">
          {{#if message.error}}
          {{message.error}}
          {{/if}}
        </div>
        <form action="/forgot-password" method="post">
        <div class="row d-flex justify-content-around">
          <div class="form-group col-md-11 px-3">
            <label for="email">Username</label>
            <input
              type="email"
              name="Email"
              class="form-control"
              style="border: none; border-bottom: 1px solid #352F44; border-radius: 0;"
              id="email"
              {{#if Email}}
              value = {{Email}}
              {{else}}
              placeholder="Enter your email"
              {{/if}}
             required
            />
          </div>
          <div class="text-end">
            <button class="btn btn-link" type="submit">Send OTP</button>
          </div>
        </div>
        </form>
          
        <form action="/verify-otp" method="post">
          <div class="row d-flex justify-content-around">
          <div class="form-group col-md-11 px-3">
            <label for="password">OTP</label>
            <input
              type="password"
              name="OTP"
              class="form-control"
              style="border: none; border-bottom: 1px solid #352F44; border-radius: 0;"
              id="password"
              placeholder="Enter your otp here"
              required
            />
          </div>
          </div>
          <br>
          <div class="row d-flex justify-content-center">
            <button type="submit" class="col-5 btn btn-block btn bg-dark text-white">Submit</button>
          </div>
        </form>
      </div>
      <br />
    </div>
  </div>
</div>