<div class="row m-2 mt-4 d-flex justify-content-center">
  <div class="col-md-8 col-12" >
    <div class="card border-0 shadow mt-5">
      <div class="card-header bg-white border-0">
        <h2 class="text-center">Sign In</h2>
      </div>
      <div class="card-body">
        <form action="/login" method="post">
          <div class="d-flex justify-content-center text-danger fw-bold">
            {{#if message.error}}
              {{message.error}}
            {{/if}}
          </div>
          <div class="row d-flex justify-content-around">
          <div class="form-group col-md-11 px-3">
            <label for="email">Email</label>
            <input
              type="email"
              name="Email"
              class="form-control"
              style="border: none; border-bottom: 1px solid #352F44; border-radius: 0;"
              id="email"
              placeholder="Email"
              required
            />
          </div>
          <div class="form-group col-md-11 px-3">
            <label for="password">Password</label>
            <input
              type="password"
              name="Password"
              class="form-control"
              style="border: none; border-bottom: 1px solid #352F44; border-radius: 0;"
              id="password"
              placeholder="Password"
              required
            />
          </div>
          </div>
          <br />
          <p class="text-center">Don't have an account?<a href="/signup">Sign up</a></p>
          <div class="text-center">
            <a href="/forgot-password">forgot password</a>
          </div>
          <br />
          <div class="row d-flex justify-content-around mb-2">
              <a
                href="/"
                class="col-4 btn btn-secondary btn-block btn bg-white"
                
              >
                <span class="m-2">Back to home</span></a>
              <button
                class="col-6 btn btn-secondary btn-block btn text-white"
                type="submit"
                
              >Sign in</button>
          </div>
        </form>
      </div>
      <br />
    </div>
  </div>
</div>

