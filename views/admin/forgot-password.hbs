<div class="row m-5">
  <div class="container" style="width: 60%;">
    <div class="card border-0 shadow mt-5">
      <br>
      <div class="card-header bg-white border-0">
        <h2 class="text-center"></h2>
      </div>
      <div class="card-body">
        <div class="text-center fw-bold text-success">
          {{#if message.success}}
          {{message.success}}
          {{/if}}
        </div>
        <div class="text-center fw-bold text-danger">
          {{#if message.error}}
          {{message.error}}
          {{/if}}
        </div>
        <form action="/admin/send-otp" method="post">
          <div class="form-group col-md-11 m-5">
            <label for="email">Username</label>
            <input
              type="email"
              name="Email"
              class="form-control"
              style="border: none; border-bottom: 1px solid #352F44; border-radius: 0;"
              id="email"
              {{#if Email}}
              value = {{Email}}
              {{else}}
              placeholder="Enter your email"
              {{/if}}
             required
            />
          </div>
          <div class="text-end">
            <button class="btn btn-link" type="submit">Send OTP</button>
          </div>
          </form>
          <form action="/admin/verify-otp" method="post">
          <div class="form-group col-md-11 mx-5">
            <label for="password">OTP</label>
            <input
              type="password"
              name="OTP"
              class="form-control"
              style="border: none; border-bottom: 1px solid #352F44; border-radius: 0;"
              id="password"
              placeholder="Enter your otp here"
              required
            />
          </div>
          <br>
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-block btn-lg bg-dark text-white" style="width: 50%;">Submit</button>
          </div>
        </form>
      </div>
      <br />
    </div>
  </div>
</div>




