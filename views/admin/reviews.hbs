<body class="mt-5">
  <div class="container-fluid">
    <div class="row" >
      <main class="col-md-12 ms-sm-auto col-lg-12 px-md-4 bg-light">
                <h1 class="mt-3">Reviews</h1>
                <div class="d-flex justify-content-end m-3">
                    <div class="dropdown" >
                      <button class="btn bg-light border dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-sliders"></i>
                        <span class="m-2">Filter</span>
                          
                      </button>
                      <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/admin/reviews">Latest</a></li>
                        <li><a class="dropdown-item" href="/admin/reviews/oldest">Oldest</a></li>
                      </ul>
                    </div>
                </div>
                <div class="table-responsive">
          <table id="table" class="table border overflow-scroll">
            <thead>
              <tr class="h5">
                <th class="border text-center-in-table">Customer ID</th>
                <th class="border text-center-in-table">Product ID</th>
                <th class="border text-center-in-table">Comment</th>
                <th class="border text-center-in-table">Date</th>
                <th class="border text-center-in-table">Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each reviews}}
              <tr >
                <td class="border text-center-in-table">{{this.UserId}}</td>
                <td class="border text-center-in-table">{{this.ProductId}}</td>
                <td class="border text-center-in-table">{{this.Comment}}</td>
                <td class="border text-center-in-table">{{this.Date}}</td>
                <td class="border text-center-in-table py-3">
                  <a href="/admin/delete-review/{{this._id}}" onclick="return confirm('Hey admin, \n Are you sure to delete this comment?')" ><i class="fas fa-trash"></i></a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          {{#if reviews.length}}
          <div class="d-flex justify-content-between align-items-center mt-3 me-2">
            <p>
              Showing {{startIndex}}-{{endIndex}} results from {{totalCount}}
            </p>
            <ul class="pagination">
              {{#if hasPreviousPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{previousPage}}">Prev</a>
                </li>
              {{/if}}
      
              {{#if currentPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{currentPage}}">{{currentPage}}</a>
                </li>
              {{/if}}
      
              {{#if hasNextPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{nextPage}}">Next</a>
                </li>
              {{/if}}
            </ul>
          </div>
          {{else}}
            <p>No results found.</p>
          {{/if}}
          </div>
        </div>
      </main>
    </div>
  </div>
</body>

<style>
  #table {
    overflow-x: scroll;
  }
</style>





