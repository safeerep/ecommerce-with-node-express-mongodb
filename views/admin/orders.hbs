<body class="mt-5">
  <div class="container-fluid">
    <div class="row" >
      <main class="col-md-12 ms-sm-auto col-lg-12 px-md-4 bg-light">
                <h2 class="mt-3">Orders</h2>
                <div class="d-flex justify-content-end m-3">
                    <a href="/admin/return-requests" class="btn btn-warning border position-relative mx-3">
                      Return requests
                      {{#if returnRequests}}
                      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        {{returnRequests}}
                      </span>
                      {{/if}}
                    </a>
                    <div class="dropdown" >
                      <button class="btn bg-light border dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-sliders"></i>
                        <span class="m-2">Filter</span>
                          
                      </button>
                      <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/admin/orders">All orders</a></li>
                        <li><a class="dropdown-item" href="/admin/pending-orders">Pending orders</a></li>
                        <li><a class="dropdown-item" href="/admin/cancelled-orders">Cancelled orders</a></li>
                        <li><a class="dropdown-item" href="/admin/return-related">Return related</a></li>
                      </ul>
                    </div>
                </div>
                <div class="table-responsive"  style="min-height: 100vh;">
          <table id="table" class="table overflow-scroll">
            <thead>
              <tr class="h5">
                <th class="border text-center-in-table">ORDER ID</th>
                <th class="border text-center-in-table">ORDERED DATE</th>
                <th class="border text-center-in-table">CUSTOMER</th>
                <th class="border text-center-in-table">AMOUNT</th>
                <th class="border text-center-in-table">PAYMENT</th>
                <th class="border text-center-in-table">STATUS</th>
                <th class="border text-center-in-table">UPDATE</th> 
                <th class="border text-center-in-table">VIEW</th> 
              </tr>
            </thead>
            <tbody>
              {{#each orders}}
              <tr>
                <td class="border text-center-in-table">{{this._id}}</td>
                <td class="border text-center-in-table">{{this.Date}}</td>
                <td class="border text-center-in-table">{{this.UserId}}</td>
                <td class="border text-center-in-table">â‚¹ {{this.PayableAmount}}</td>
                <td class="border text-center-in-table">{{this.PaymentMethod}}</td>
                <td class="border text-center-in-table">{{this.PaymentStatus}}</td>
                {{#if ../cancelled}}
                <td class="border text-center-in-table">{{this.Status}}</td>
                {{/if}}
                {{#if ../allOrders}}
                <td class="border text-center-in-table">{{this.Status}}</td>
                {{/if}}
                
                {{#unless ../allOrders}}
                {{#unless ../cancelled}}
                <td class="border text-center-in-table">
                  <div class="dropdown">
                    <a class="btn btn-light border btn-sm dropdown-toggle" 
                    href="/admin/update-order/{{this._id}}" 
                    role="button" 
                    data-bs-toggle="dropdown" 
                    aria-expanded="false"> 
                    {{this.Status}}
                    </a>

                    <ul class="dropdown-menu">
                      {{#if ../returnRequest}}
                      <li><a href="/admin/update-order/{{this._id}}?status=Return request rejected" 
                      class="dropdown-item" 
                      onclick="return confirm('Are you sure to Reject this request?')" >
                      Reject Return request
                      </a></li>
                      <li><a href="/admin/update-order/{{this._id}}?status=Return request accepted" 
                      class="dropdown-item" 
                      onclick="return confirm('Are you sure to Accept this request?')" >
                      Accept Return request
                      </a></li>
                      <li><a href="/admin/update-order/{{this._id}}?status=Returned" 
                      class="dropdown-item" 
                      onclick="return confirm('Are you sure, you got it?')" >
                      Verify Return
                      </a></li>
                      {{/if}}
                      {{#if ../pendingOrders}}
                      <li><a href="/admin/update-order/{{this._id}}?status=Confirmed" 
                      class="dropdown-item" 
                      onclick="return confirm('Are you sure to Confirm this order?')" >
                      Confirmed
                      </a></li>

                      <li><a href="/admin/update-order/{{this._id}}?status=Shipped" 
                      class="dropdown-item" 
                      onclick="return confirm('Are you sure to this order is shipped?')">
                      Shipped
                      </a></li>

                      <li><a href="/admin/update-order/{{this._id}}?status=Delivered" 
                      class="dropdown-item" 
                      onclick="return confirm('Are you sure this order is delivered?')">
                      Delivered
                      </a></li>

                      <li><a href="/admin/cancel-order/{{this._id}}?status=Rejected" 
                      onclick="return confirm('Are you sure to reject this order?')" 
                      class="dropdown-item">
                      Reject
                      </a></li>
                      {{/if}}
                    </ul>
                  </div>
                {{/unless}}
                {{/unless}}
                </td>
                <td class="border text-center-in-table">
                  <a href="/admin/view-order/{{this._id}}"><i class="fas fa-eye d-flex justify-content-center"></i></a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>

          {{#if orders.length}}
          <div class="d-flex justify-content-between align-items-center mt-3 me-2">
            <p>
              Showing {{startIndex}}-{{endIndex}} results from {{totalCount}}
            </p>
            <ul class="pagination">
              {{#if hasPreviousPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{previousPage}}">Prev</a>
                </li>
              {{/if}}
      
              {{#if currentPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{currentPage}}">{{currentPage}}</a>
                </li>
              {{/if}}
      
              {{#if hasNextPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{nextPage}}">Next</a>
                </li>
              {{/if}}
            </ul>
          </div>
          {{else}}
            <p>No results found.</p>
          {{/if}}
          </div>
        </div>
      </main>
    </div>
  </div>
</body>

<style>
  #table {
    overflow-x: scroll;
  }
</style>





