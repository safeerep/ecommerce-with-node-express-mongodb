<div class="mt-5 pt-3">
  <div class="container mt-5" style="width: 60%;">
    <div class="card border-0 shadow mt-5">
      <br>
      <div class="card-header bg-white border-0">
        <h2 class="text-center">Add new Admin</h2>
      </div>
      
      <div class="card-body">
        <form action="/admin/add-sub-admin" method="post">
        <div class="text-center text-danger text-bold">

        {{#if message.error}}
      {{message.error}}
      {{/if}}
        </div>
          <div class="form-group col-md-11 m-5">
            <label for="email">Username</label>
            <input
              type="email"
              name="Email"
              class="form-control"
              style="border: none; border-bottom: 1px solid #352F44; border-radius: 0;"
              id="email"
              placeholder="Enter your email"
             required
            />
          </div>
          <div class="form-group col-md-11 m-5">
            <label for="phonenumber">Phone number</label>
            <input
              type="number"
              name="Phone"
              class="form-control"
              style="border: none; border-bottom: 1px solid #352F44; border-radius: 0;"
              id="email"
              placeholder="type phonenumber"
             required
            />
          </div>
          <div class="form-group col-md-11 m-5">
            <label for="password">Password</label>
            <input
              type="password"
              name="Password"
              class="form-control"
              style="border: none; border-bottom: 1px solid #352F44; border-radius: 0;"
              id="password"
              placeholder="Type password for sub-admin"
              required
            />
          </div>
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-block btn-lg bg-dark text-white" style="width: 50%;">Add</button>
          </div>
        </form>
      </div>
      <br />
    </div>
  </div>
</div>


