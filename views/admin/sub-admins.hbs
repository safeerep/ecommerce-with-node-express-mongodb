<body class="mt-5">
  <div class="container-fluid">
    <div class="row" >
      <main class="col-md-12 ms-sm-auto col-lg-12 px-md-4 bg-light">
        <div class="d-flex justify-content-between align-items-center mt-4 ">
          <h1 class="m-2">Sub-admins</h1>
          <div class="d-flex flex-column align-items-end m-2">
              <a href="/admin/add-sub-admin" class="btn btn-success mb-2">+ Add new admin</a>
              <div class="dropdown" >
            <button class="btn bg-light border dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-sliders"></i>
              <span class="m-2">Filter</span>
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">Newly Added</a></li>
              <li><a class="dropdown-item" href="#">Blocked</a></li>
            </ul>
          </div>
          </div>
          </div>
          <div class="table-responsive">
          <table id="table" class="table overflow-scroll border">
            <thead >
              <tr>
                <th class="border text-center-in-table">User name</th>
                <th class="border text-center-in-table">Admin ID</th>
                <th class="border text-center-in-table">Phone</th>
                <th class="border text-center-in-table">Status</th>
                <th class="border text-center-in-table">Created Date</th>
                <th class="border text-center-in-table">Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each admins}}
              <tr>
                <td class="border text-center-in-table">{{this.Email}}</td>
                <td class="border text-center-in-table">{{this._id}}</td>
                <td class="border text-center-in-table">{{this.Phone}}</td>
                <td class="border text-center-in-table">{{this.Status}}</td>
                <td class="border text-center-in-table">{{this.Createdon}}</td>
                <td class="border text-center-in-table">
                  <a href="/admin/block-admin/{{this._id}}" onclick="return confirm('Are you sure to change the Status?')" ><i class="fas fa-pencil"></i></a>
                  <a href="/admin/remove-admin/{{this._id}}" onclick="return confirm('Are you sure to remove this admin?')"><i class="fas fa-trash ms-3"></i></a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          {{#if admins.length}}
          <div class="d-flex justify-content-between align-items-center mt-3 me-2">
            <p>
              Showing {{startIndex}}-{{endIndex}} results from {{totalCount}}
            </p>
            <ul class="pagination">
              {{#if hasPreviousPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{previousPage}}">Prev</a>
                </li>
              {{/if}}
      
              {{#if currentPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{currentPage}}">{{currentPage}}</a>
                </li>
              {{/if}}
      
              {{#if hasNextPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{nextPage}}">Next</a>
                </li>
              {{/if}}
            </ul>
          </div>
          {{else}}
            <p>No results found.</p>
          {{/if}}
          </div>
        </div>
      </main>
    </div>
  </div>
</body>





