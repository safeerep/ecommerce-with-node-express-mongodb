
  <div class="container-fluid">
    <div class="row mt-5" >
      <main class="col-md-12 ms-sm-auto col-lg-12 px-md-4 bg-light">
                <div class="d-flex mt-5">
                    <div>
                         <h2>Coupons</h2>
                    </div>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <form action="/admin/coupons" method="get">
                    <div class="input-group me-5 " style="width: 15rem;">
                            <input type="text" name="CouponName" class="form-control" placeholder="Search Coupon..">
                    </div>
                    </form>
                    <div>
                        <a href="/admin/add-coupon" class="btn btn-success ">+ Add Coupon</a>
                    </div>  
                </div>
                <div class="table-responsive"  style="min-height: 100vh;">
          <table id="table" class="table overflow-scroll">
            <thead>
              <tr class="h5">
                <th class="border text-center-in-table">Coupon Name</th>
                <th class="border text-center-in-table">Coupon Code</th>
                <th class="border text-center-in-table">Created on</th>
                <th class="border text-center-in-table">Expiry date</th>
                <th class="border text-center-in-table">Discount Amount</th>
                <th class="border text-center-in-table">EDIT</th>
                <th class="border text-center-in-table">Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each coupons}}
              <tr>
                <td class="border text-center-in-table">{{CouponName}}</td>
                <td class="border text-center-in-table">{{CouponCode}}</td>
                <td class="border text-center-in-table">{{CreatedOn}}</td>
                <td class="border text-center-in-table">{{ExpireDate}}</td>
                <td class="border text-center-in-table">â‚¹ {{Discount}}</td>
                <td class="border text-center-in-table">
                  <a href="/admin/edit-coupon/{{this._id}}">
                  <i class="fas fa-pencil d-flex justify-content-center"></i>
                  </a>
                </td>
                {{#if Active}}
                <td class="border text-center-in-table">
                  <a href="/admin/disable-coupon/{{this._id}}" 
                  onclick="return confirm('Are you sure to disable this coupon?')">
                  <i class="fas fa-unlock d-flex justify-content-center"></i>
                  </a>
                </td>
                {{else}}
                <td class="border text-center-in-table">
                  <a href="/admin/enable-coupon/{{this._id}}"
                  onclick="return confirm('Are you sure to enable this coupon?')">
                  <i class="fas fa-lock d-flex justify-content-center"></i>
                  </a>
                </td>
                {{/if}}
              </tr>
              {{/each}}
            </tbody>
          </table>
          {{#if coupons.length}}
          <div class="d-flex justify-content-between align-items-center mt-3 me-2">
            <p>
              Showing {{startIndex}}-{{endIndex}} results from {{totalCount}}
            </p>
            <ul class="pagination">
              {{#if hasPreviousPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{previousPage}}">Prev</a>
                </li>
              {{/if}}
      
              {{#if currentPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{currentPage}}">{{currentPage}}</a>
                </li>
              {{/if}}
      
              {{#if hasNextPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{nextPage}}">Next</a>
                </li>
              {{/if}}
            </ul>
          </div>
          {{else}}
            <p>No results found.</p>
          {{/if}}
          </div>
        </div>
      </main>
    </div>
  </div>






